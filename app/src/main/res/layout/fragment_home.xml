<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="@dimen/homeCardViewCornerRadius"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_paragraph"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/homeImageViewHeight"
                        app:srcCompat="@drawable/home_banner_platzi_conf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/homeTextViewMargin"
                        android:layout_marginTop="@dimen/homeTextViewMargin"
                        android:layout_marginRight="@dimen/homeTextViewMargin"
                        android:text="@string/home_text_view_what_is"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/homeTextViewTitleSize"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/homeTextViewMargin"
                        android:layout_marginTop="@dimen/homeTextViewMargin"
                        android:layout_marginRight="@dimen/homeTextViewMargin"
                        android:text="@string/home_text_view_what_is_response"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/homeTextViewDescriptionSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="@dimen/homeCardViewCornerRadius"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_paragraph"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/homeImageViewHeight"
                        app:srcCompat="@drawable/home_image_1_platzi_conf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/homeTextViewMargin"
                        android:layout_marginTop="@dimen/homeTextViewMargin"
                        android:layout_marginRight="@dimen/homeTextViewMargin"
                        android:text="@string/home_text_view_why"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/homeTextViewTitleSize"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/homeTextViewMargin"
                        android:layout_marginTop="@dimen/homeTextViewMargin"
                        android:layout_marginRight="@dimen/homeTextViewMargin"
                        android:text="@string/home_text_view_why_response"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/homeTextViewDescriptionSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="@dimen/homeCardViewCornerRadius"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_paragraph"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/homeImageViewHeight"
                        app:srcCompat="@drawable/home_image_2_platzi_conf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/homeTextViewMargin"
                        android:layout_marginTop="@dimen/homeTextViewMargin"
                        android:layout_marginRight="@dimen/homeTextViewMargin"
                        android:text="@string/home_text_view_info"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/homeTextViewTitleSize"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/homeTextViewMargin"
                        android:layout_marginTop="@dimen/homeTextViewMargin"
                        android:layout_marginRight="@dimen/homeTextViewMargin"
                        android:text="@string/home_text_view_info_response"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/homeTextViewDescriptionSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>